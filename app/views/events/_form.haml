= form_for(@event, :html => {:class => 'ui form'})  do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :date_start
    %br/
    = f.text_field :date_start
  .field
    = f.label :date_end
    %br/
    = f.text_field :date_end
  .field
    = f.label :name
    %br/
    = f.text_field :name


  = f.submit class: "ui right attached blue button"
